
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLTELayout/AdminLTELayout.cshtml";
}


<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Departments</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item active">Departments</li>
                    <li class="breadcrumb-item btn btn-sm btn-light border-0" id="logout" onclick="Logout()">Logout</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">

                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Departments Table</h3>
                    </div>
                   
                    <!-- /.card-header -->
                    <div class="card-body">
                  
                        <!-- Button trigger modal add-Department -->
                        <button type="button" class="btn btn-sm btn-primary mb-2" data-bs-toggle="modal" data-bs-target="#modal-add" onclick="ClearScreen()">
                            + Add Department
                        </button>

                        <!-- Modal All Action Department -->
                        <div class="modal fade" id="modal-add" aria-labelledby="exampleModalLabel" aria-hidden="true">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="exampleModalLabel">Department</h5>
                                        <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                                            <span aria-hidden="true">×</span>
                                        </button>
                                    </div>
                                    <div class="modal-body">
                                        <div id="alert-department" class="alert alert-danger" role="alert" style="display:none"> Nama Department Tidak Boleh Kosong! </div>
                                        <form>
                                            <div class="mb-3">
                                                <input type="text" class="form-control" id="departmentId" hidden>
                                            </div>
                                            <div class="mb-3">
                                                <label class="col-form-label">Department Name : </label>
                                                <input type="text" class="form-control" id="departmentName"  required>
                                            </div>
                                        </form>
                                        
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                        <button type="button" class="btn btn-primary btn-add" id="Add" onclick="Save()">Add</button>
                                        <button type="button" class="btn btn-primary" id="Update" data-bs-dismiss="modal"  onclick="Update()">Update</button>
                                  
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!--End Modal-->

                        <table id="TB_Department" class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th>No</th>
                                    <th>Name</th>
                                    <th>Action</th>
                                
                                
                                </tr>
                            </thead>
         
                        </table>
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
